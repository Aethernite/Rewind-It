pipeline {
    agent any
      
    stages {
        stage('Build') {
            steps {
			    dir("server") {
                   sh 'mvn -DskipTests clean package'
                }
            }
        }
		stage('Stop service') {
            steps {
			     sh 'systemctl stop rewind'
            }
        }
		stage('Deliver') {
            steps {
			  dir("server/target/"){
			     sh 'cp project-timesheet-1.0.0-SNAPSHOT.jar /root/server/rewind-application.jar'
				}
            }
        }
		stage('Deploy') {
            steps {
			     sh 'java -javaagent:./jmx2logzio-javaagent.jar=LOGZIO_TOKEN=CjQVGlwZBtAElPYTzGJdTFpOkVAMBeuM,SERVICE_NAME=rewind /root/server/rewind-application.jar'
            }
        }
    }
}
