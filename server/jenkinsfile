pipeline {
    agent any
      
    stages {
        stage('Build') {
            steps {
			    dir("server") {
                   sh 'mvn -B -DskipTests clean package'
                }
            }
        }
        stage('Test') {
            steps {
			    dir("server") {
                  sh 'mvn test'
                }
            }
        }
        stage('Deliver') {
            steps {
                sh './server/jenkins/scripts/deliver.sh'
            }
        }
    }
}